<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/view_holder_padding"
        android:paddingEnd="@dimen/view_holder_padding">

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/majorVersionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/ar_device_info_major_version"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/minorVersionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/ar_device_info_minor_version"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/productIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/ar_device_info_product_id"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/variantText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/ar_device_info_variant"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/transmissionPeriodText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/ar_device_info_transmission_period"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/maxPayloadText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/ar_device_info_max_payload"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/maxActiveSensorsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/ar_device_info_max_sensors"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/deviceStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/ar_device_info_device_status"/>

        <com.bose.wearable.sample.views.SubSectionView
            android:id="@+id/availableSensorsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/ar_device_info_available_sensors"/>

        <com.bose.wearable.sample.views.SubSectionView
            android:id="@+id/availableGesturesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ar_device_info_available_gestures"/>

    </LinearLayout>
</ScrollView>