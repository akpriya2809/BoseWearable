<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/view_holder_padding"
        android:paddingEnd="@dimen/view_holder_padding">

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/systemIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/device_info_system_id"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/modelNumberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/device_info_model_number"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/serialNumberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/device_info_serial_number"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/firmwareRevText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/device_info_firmware_rev"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/hardwareRevText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/device_info_hardware_rev"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/softwareRevText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/device_info_software_rev"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/manufacturerNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/device_info_manufacturer_name"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/regulatoryCertText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/device_info_regulatory_cert"/>

        <com.bose.wearable.sample.views.TwoLineTextView
            android:id="@+id/pnpIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:title="@string/device_info_pnp_id"/>
    </LinearLayout>
</ScrollView>
